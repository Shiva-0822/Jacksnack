rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to create an order, which is needed for the checkout page.
    match /orders/{orderId} {
      allow create: if true;
      
      // Only allow authenticated users to read, update, or delete orders.
      allow read, update, delete: if request.auth != null;
    }

    // You can add rules for other collections here.
    // For example, if you had a 'users' collection:
    // match /users/{userId} {
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
    // }
  }
}