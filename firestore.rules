
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Protect user carts
    match /carts/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Protect user orders
    // Allow users to create orders, but not view/edit/delete others' orders
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false; // Or add admin-only rules here
    }

    // Allow public write access for contact form, but no read/update/delete
    match /messages/{messageId} {
        allow create: if true;
        allow read, update, delete: if false;
    }
  }
}
