
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow anyone to create documents in the 'orders' collection.
    // This is necessary so that guests can place orders.
    // Do not allow them to read, update, or delete existing orders.
    match /orders/{orderId} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // Allow users to manage only their own cart items.
    match /carts/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
